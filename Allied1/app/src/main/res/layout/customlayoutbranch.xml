<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Coll_list_CardView"
    cardView:cardBackgroundColor="#FF5007"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/coll_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/coll_name"
            android:layout_gravity="center_horizontal|top"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/coll_image"
            android:layout_toEndOf="@+id/coll_image"
            android:layout_above="@+id/coll_seats" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/coll_seats"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/coll_image" />
    </RelativeLayout>
</android.support.v7.widget.CardView>

