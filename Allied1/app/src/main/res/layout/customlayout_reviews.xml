<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

         <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardCornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/rev_coll_nametv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="College:"
                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                />

            <TextView
                android:layout_toRightOf="@+id/rev_coll_nametv"
                android:textColor="#000000"
                android:maxLines="2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Coll_name"
                android:layout_alignParentTop="true"
                />
            <TextView
                android:layout_marginTop="8dp"
                android:layout_below="@+id/rev_coll_nametv"
                android:id="@+id/rev_coll_desctv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                />

            <TextView
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@+id/rev_coll_desctv"
                android:maxLines="5"
                android:singleLine="false"
                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceMedium"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/coll_desc"
                android:layout_below="@+id/Coll_name"
                />

            <TextView
                android:layout_marginTop="18dp"
                android:layout_below="@+id/coll_desc"
                android:id="@+id/review_rating"
                android:layout_width="wrap_content"
             android:text="Stars:"
                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_height="wrap_content"
               />
            <TextView
                android:layout_toRightOf="@+id/review_rating"
                android:id="@+id/coll_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_alignTop="@+id/review_rating"
                android:layout_alignParentEnd="true"
                />


        </RelativeLayout>

    </android.support.v7.widget.CardView>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>