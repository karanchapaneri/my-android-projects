<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circlecollimage"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <TextView
                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="New Text"
                android:layout_toRightOf="@+id/circlecollimage"
                android:id="@+id/coll_name_with_branchtv"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true" />

            <TextView
                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/coll_fees_tv"
                android:layout_below="@+id/circlecollimage"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/coll_name_with_branchtv" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar2"
                android:layout_alignParentBottom="true"
                android:layout_alignEnd="@+id/coll_name_with_branchtv"
                android:layout_toEndOf="@+id/circlecollimage" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>