<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/Individ_Coll_Name"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginBottom="8dp"
            android:background="#FF795548"
            android:text=""
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_marginTop="8dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="279dp">

                <ImageView
                    android:id="@+id/coll_iv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@raw/ic_location_on_black_18dp" />

                <TextView
                    android:id="@+id/coll_tv_location"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/coll_iv_location"
                    android:autoLink="map"
                    android:linksClickable="true"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/coll_iv_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/coll_iv_location"
                    android:src="@raw/ic_call_black_18dp" />

                <TextView
                    android:id="@+id/coll_tv_call"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignBottom="@+id/coll_iv_call"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/coll_iv_call"
                    android:autoLink="phone" />

                <ImageView
                    android:id="@+id/coll_iv_web"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/coll_iv_call"
                    android:src="@raw/ic_public_black_18dp" />

                <TextView
                    android:id="@+id/coll_tv_web"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignBottom="@+id/coll_iv_web"
                    android:layout_below="@+id/coll_tv_call"
                    android:layout_toRightOf="@+id/coll_iv_web"
                    android:autoLink="web" />

                <ImageView
                    android:id="@+id/coll_iv_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/coll_iv_web"
                    android:src="@raw/ic_email_black_18dp" />

                <TextView
                    android:id="@+id/coll_tv_mail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/coll_tv_web"
                    android:layout_toRightOf="@+id/coll_iv_mail"
                    android:autoLink="email" />

                <ImageView
                    android:id="@+id/coll_iv_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/coll_iv_mail"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/coll_iv_mail"
                    android:layout_marginTop="5dp"
                    android:src="@raw/ic_rupee" />

                <TextView
                    android:id="@+id/coll_tv_fee"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/coll_tv_mail"
                    android:layout_toRightOf="@+id/coll_iv_fee" />
            </RelativeLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/coll_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:text="Type:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/coll_tv_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@+id/coll_type" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/branchtv"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Branch"/>

                <TextView
                    android:id="@+id/seatstv"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seats"
                    android:layout_column="29"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="vcdfsdfs"
                    android:textStyle="bold"
                    android:layout_below="@+id/branchtv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/collbranchtv"/>

                <TextView
                    android:id="@+id/collseatstv"
                    android:layout_alignParentEnd="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="vcdfsdfs"
                    android:textStyle="bold"
                    android:layout_below="@+id/seatstv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>


        </android.support.v7.widget.CardView>


    </LinearLayout>

</ScrollView>
</LinearLayout>
