<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="lol.com.epl.DisplayActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/name"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/sho"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/market"
        android:textSize="30sp"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/sho"
        android:layout_alignEnd="@+id/name"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivImage"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/sho"
        android:layout_marginTop="82dp"
        android:src="@drawable/com_facebook_button_like_icon_selected"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:text="fixture"
            android:id="@+id/fixture"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/market"
            android:layout_marginStart="56dp"
            android:layout_gravity="bottom"
            android:layout_weight="0.19"
            android:background="#801bff00"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:text="players"
            android:id="@+id/players"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/market"
            android:layout_gravity="bottom"
            android:layout_weight="0.31"
            android:textColor="#ff0e0e0e"
            android:background="#801bff00"/>

    </LinearLayout>

</RelativeLayout>
