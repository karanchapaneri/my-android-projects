<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context="lol.com.epl.HomeFragment"
                android:background="#ffffffff">


    <TextView
        android:id="@+id/label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="45dp"
        android:text="Just Football"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:gravity="center_horizontal"
        android:text="Catch Live Scores, Standings and Live Commentary"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView6"
        android:layout_alignEnd="@+id/button3"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EPL"
        android:id="@+id/button"
        android:layout_below="@+id/label"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/button2"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Primera Division "
        android:id="@+id/button2"
        android:layout_alignTop="@+id/button3"
        android:layout_centerHorizontal="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bundesliga"
        android:id="@+id/button3"
        android:layout_below="@+id/label"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/button2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your favorite league"
        android:id="@+id/textView6"
        android:textSize="20dp"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_centerHorizontal="true"/>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="31dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username:"
        android:id="@+id/textView4"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password:"
        android:id="@+id/textView7"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="290sp"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:layout_above="@+id/textView7"
        android:layout_alignStart="@+id/textView6"/>

    <EditText
        android:layout_width="290sp"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignEnd="@+id/username"
        android:inputType="textPassword"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="login"
        android:id="@+id/button5"
        android:layout_below="@+id/password"
        android:layout_toEndOf="@+id/button"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SignUp"
        android:id="@+id/signup"
        android:layout_alignTop="@+id/button5"
        android:layout_toEndOf="@+id/button5"/>

</RelativeLayout>