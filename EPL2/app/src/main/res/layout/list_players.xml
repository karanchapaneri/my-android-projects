<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                tools:background="#00ff00"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/circleImageView"
        android:src="#fffff60c"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="184dp"/>

    <TextView
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/name"
        android:textSize="15sp"
        android:textColor="#ff070707"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19"
        android:id="@+id/jersey"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/name"
        android:layout_toEndOf="@+id/circleImageView"
        android:textColor="#ff101010"/>

    <TextView
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/nationality"
        android:textSize="10sp"
        android:textColor="#ff0b0b0b"
        android:layout_above="@+id/birth"
        android:layout_toStartOf="@+id/textView10"
        android:layout_marginEnd="31dp"/>

    <TextView
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/birth"
        android:textSize="10sp"
        android:textColor="#ff000000"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/textView10"
        android:layout_alignStart="@+id/nationality"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/market"
        android:textSize="20sp"
        android:textColor="#ff0b0b0b"
        android:layout_alignTop="@+id/contract"
        android:layout_alignStart="@+id/birth"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/contract"
        android:textSize="20sp"
        android:textColor="#ff000000"
        android:layout_marginBottom="37dp"
        android:layout_alignBottom="@+id/circleImageView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="51dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/position"
        android:textSize="10sp"
        android:textColor="#ff0b0b0b"
        android:layout_alignBottom="@+id/name"
        android:layout_alignEnd="@+id/textView10"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contract till:"
        android:id="@+id/textView10"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/contract"
        android:textColor="#ff020202"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Market Value:"
        android:id="@+id/textView11"
        android:layout_above="@+id/market"
        android:layout_alignStart="@+id/market"
        android:textColor="#ff080808"/>


</RelativeLayout>