<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f36121"
    tools:context="com.example.dayshift.logindemo.RegistrationActivity">

    <RelativeLayout
        android:id="@+id/card_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_centerInParent="true">

        <android.support.v7.widget.CardView
            android:id="@+id/card_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardBackgroundColor="#ffffff"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="0dp"
            card_view:cardUseCompatPadding="false" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="50dp"
                android:padding="24dp">

                <EditText
                    android:id="@+id/username"
                    android:inputType="text"
                    android:drawableLeft="@drawable/ic_action_user"
                    android:layout_width="match_parent"
                    android:drawablePadding="12dp"
                    android:drawableTint="#f36121"
                    android:drawableBottom="@android:drawable/divider_horizontal_textfield"
                    android:layout_height="wrap_content"
                    android:hint="Username"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="phone number"
                    android:drawableBottom="@android:drawable/divider_horizontal_textfield"
                    android:drawableLeft="@drawable/ic_action_phone"
                    android:drawableTint="#f36121"
                    android:drawablePadding="12dp"/>
                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:drawableBottom="@android:drawable/divider_horizontal_textfield"
                    android:drawableTint="#f36121"
                    android:drawableLeft="@drawable/ic_action_pass"
                    android:drawablePadding="12dp"
                    android:inputType="textPassword"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sign_in_btn"
                    android:textColor="@android:color/white"
                    android:text="Sign Up"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:elevation="5dp"
                    android:background="#f36121"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/default_user"
            app:civ_border_width="7dp"
            app:civ_border_color="#f36126"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/link_to_sign_in"
            android:layout_marginTop="16dp"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:fabSize="normal"
            android:src="@drawable/ic_action_signup"
            app:backgroundTint="#f36126"
            />
    </RelativeLayout>


</RelativeLayout>
