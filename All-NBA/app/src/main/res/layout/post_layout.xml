<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:background="@color/lightGray"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="4dp"
        android:id="@+id/card_view">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp" />

            <TextView
                android:id="@+id/scoreView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4580"
                android:textColor="@color/secondaryText"
                android:textSize="14sp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/thumbnail"
                android:layout_marginLeft="3dp" />

            <TextView
                android:id="@+id/authorView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jorgegil96"
                android:textColor="@color/blue"
                android:textSize="10sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="2dp"
                android:layout_above="@+id/titleView"
                android:layout_toEndOf="@+id/scoreView" />

            <TextView
                android:id="@+id/createdView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• 4 hrs ago"
                android:textColor="@color/secondaryText"
                android:textSize="10sp"
                android:paddingBottom="2dp"
                android:paddingRight="5dp"
                android:layout_above="@+id/titleView"
                android:layout_toEndOf="@+id/authorView" />

            <TextView
                android:id="@+id/titleView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="AP: NBA chooses New Orleands for 2017 All-Star Game "
                android:textColor="@color/primaryText"
                android:textSize="15sp"
                android:layout_below="@+id/scoreView"
                android:layout_toEndOf="@+id/thumbnail"
                android:layout_marginLeft="3dp" />

            <TextView
                android:id="@+id/numCommentsView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="382 Comments"
                android:textColor="@color/secondaryText"
                android:textSize="10sp"
                android:layout_below="@+id/titleView"
                android:layout_toEndOf="@+id/thumbnail"
                android:layout_marginLeft="3dp" />

            <TextView
                android:id="@+id/linkView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• link (streamable)"
                android:textColor="@color/secondaryText"
                android:textSize="10sp"
                android:layout_below="@+id/titleView"
                android:layout_toRightOf="@id/numCommentsView"
                android:layout_marginLeft="3dp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>



</RelativeLayout>
