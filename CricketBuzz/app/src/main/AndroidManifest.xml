<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.cricketbuzz"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".Activities.MyApp"
        android:allowBackup="true"
        android:icon="@drawable/appicon"
        android:label="@string/app_name"
        tools:replace="icon"
        android:theme="@style/AppTheme">
        <activity android:name="com.cricketbuzz.Activities.LoadingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.cricketbuzz.Activities.MainActivity"></activity>
        <activity android:name="com.cricketbuzz.Activities.FixturesActivity"></activity>
        <activity android:name="com.cricketbuzz.Activities.ResultActivity"></activity>
        <activity android:name="com.cricketbuzz.Activities.StandingsActivity"></activity>
        <activity android:name="com.cricketbuzz.Activities.ScoresActivity"></activity>
        <activity android:name="com.cricketbuzz.Activities.NewsActivity"></activity>
        <activity android:name="com.cricketbuzz.Activities.DetailNewsActivity"></activity>

    </application>

</manifest>