            android:textColor="#ffffff" />

        <FrameLayout
            android:id="@+id/layout_map"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <fragment
                android:id="@+id/map"
                android:name="vs2.navjivanclient.views.WorkaroundMapFragment"
                android:layout_width="match_parent"
